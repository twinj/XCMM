<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project XCMM with libraries in sub-folder">
	<!--this file was created by Eclipse Runnable JAR Export Wizard-->
	<!--ANT 1.7 is required                                        -->
	<target name="create_run_jar">
		<!--delete dir="XCMM/bin" /-->

		<jar destfile="XCMM/XCMM.jar">
			<manifest>
				<attribute name="Main-Class" value="org.xcom.mod.console.XCMConsole" />
				<attribute name="Class-Path" value=". lib/hibernate-jpa-2.0-api-1.0.0.Final.jar lib/lipstikLF-1.1.jar" />
			</manifest>
			<fileset dir="build/classes" />
		</jar>
		<delete dir="XCMM/lib" />
		<delete dir="XCMM/mods" />
		<delete dir="XCMM/tools" />
		<delete dir="XCMM/unpacked" />
		<delete dir="XCMM/config" />
		<delete dir="XCMM/temp" />
		
		<!--mkdir dir="XCMM/bin" /-->
		<mkdir dir="XCMM/lib" />
		<mkdir dir="XCMM/mods" />
		<mkdir dir="XCMM/tools" />
		<mkdir dir="XCMM/unpacked" />
		<mkdir dir="XCMM/config" />
		<mkdir dir="XCMM/lib" />
		<mkdir dir="XCMM/temp" />

		<copy file="lib/hibernate-jpa-2.0-api-1.0.0.Final.jar" todir="XCMM/lib" />
		<copy file="lib/lipstikLF-1.1.jar" todir="XCMM/lib" />
		<copy file="src/resources/XCMM-Gui.bat" toDir="XCMM" />
		<copy file="src/resources/XCMM-Usage.bat" toDir="XCMM" />
		<!--copy file="src/resources/config.xml" toDir="XCMM/config" /-->

	</target>
</project>
